@model UpdateCommentDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Update Comment</h4>
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" readonly class="form-control" asp-for="Id" />
                        <input type="hidden" readonly class="form-control" asp-for="ProductId" />
                        <div>Id: @Model.Id</div>
                        <div>Product Id: @Model.ProductId</div>

                        <br />

                        <label>Name</label>
                        <input type="text" class="form-control" asp-for="NameSurname" />
                        <br />

                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />

                        
                        <label>Rate</label>
                        <input type="number" class="form-control" asp-for="Rate" />
                        <br />

                        <label>Date</label>
                        <input type="date" class="form-control" asp-for="CreatedAt" readonly />
                        <br />

                        <label>Status</label>
                        <select class="form-control" asp-for="Status">
                            <option value="True">Approved</option>
                            <option value="False">Pending</option>
                        </select>
                        <br />

                        <label>Comment</label>
                        <textarea class="form-control" asp-for="Comment" rows="3"></textarea>
                        <br />


                        <button class="btn btn-primary">Update</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</section>

