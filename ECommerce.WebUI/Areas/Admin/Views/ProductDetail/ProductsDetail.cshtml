@model UpdateProductDetailDto

@{
    ViewData["Title"] = "ProductsDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Update Product Detail</h4>
                <div class="bs-example" data-example-id="bordered-table">

                    <form method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <input type="hidden" name="ProductId" value="@Model.ProductId" />
                        <br />
                        <label>Description</label>
                        <textarea class="form-control" asp-for="Description" rows="5"></textarea>
                        <br />
                        <label>Info</label>
                        <textarea class="form-control" asp-for="Info" rows="5"></textarea>
                        <br />
                        <button class="btn btn-primary">Update</button>
                    </form>

                </div>
            </div>
        </div>

    </div>
</section>





